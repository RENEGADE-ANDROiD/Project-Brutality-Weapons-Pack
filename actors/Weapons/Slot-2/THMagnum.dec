{
   Inventory.Amount 0
   Inventory.MaxAmount 3
   Ammo.BackpackAmount 0
   Ammo.BackpackMaxAmount 3
   +INVENTORY.IGNORESKILL
   +EXTREMEDEATH
   Inventory.Icon "THMGA0"
}

Actor THTracer: FastProjectile
{
	Projectile
	+RANDOMIZE
	+FORCEXYBILLBOARD
	+DONTSPLASH
	//+BLOODSPLATTER 
	+EXTREMEDEATH
	+FORCEPAIN
	+RIPPER
	damage 75
	radius 2
	height 2
	speed 200
	renderstyle ADD
	alpha 0.9
	scale .15
	states
	{
	Spawn:
		TNT1 A 0 A_JumpIf(GetCvar("PB_TracerLight") >=1,"Spawn2")
	Spawn1:
		TRAC A 1 BRIGHT 
		Loop
	Spawn2:
		TRAC A 1 BRIGHT Light("TracerLight")
		Loop
	Death:
	XDeath:
		TNT1 A 0
			{
				A_StopSound(CHAN_BODY);
				bNOGRAVITY = true;
				A_SpawnItemEx("HitPuff");
				A_Stop();
				
					A_SpawnProjectile ("HitSpark", 2, 0, frandom(0,1)*frandom (0, 360), 2, frandom(0,1)*frandom (30, 360));
					A_CustomMissile ("PBExplosionparticles", 0, 0, random (0, 360), 2, random (40, 90));
					A_CustomMissile ("PBExplosionparticles", 0, 0, random (0, 360), 2, random (40, 90));
			}
		Stop
	}
}